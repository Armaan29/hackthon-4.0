<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/slides"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/mainscreen1"
        android:scaleType="fitXY">
    </ImageView>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jaipur"
        android:layout_below="@+id/slides"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textAlignment="center"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hbfhjsdfn"
            android:textColor="#000"
            android:textStyle="italic"

            android:layout_below="@id/name"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="No. of Forigen Students"
            android:layout_below="@id/desc"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/frgnstu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:text="0"
            android:ems="3"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"

            android:inputType="number"
            android:layout_below="@id/tv1"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Indian Students"
            android:textColor="#000"
            android:textStyle="bold"

            android:layout_below="@id/frgnstu"/>

        <EditText
            android:id="@+id/indstu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:text="0"
            android:ems="3"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"

            android:inputType="number"
            android:layout_below="@id/tv2"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            android:text="No. of Forigen Adults"
            android:layout_below="@id/indstu"/>

        <EditText
            android:id="@+id/frgnadl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:hint="0"
            android:ems="3"
            android:textAlignment="center"

            android:inputType="number"
            android:layout_below="@id/tv3"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Indian Adults"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"

            android:layout_below="@id/frgnadl"/>

        <EditText
            android:id="@+id/indadl"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 0"
            android:text="0"
            android:ems="3"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_below="@id/tv4"/>
        <DatePicker
            android:id="@+id/simpleDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:layout_below="@id/indadl"
            android:onClick="addcart"/>


</LinearLayout>
</ScrollView>